<!DOCTYPE html>
<html ng-app='LocalSupport'>
<head>
  <title><%= content_for?(:title) ? yield(:title) : "Harrow Community Network" %> </title>
  <!-- As provided by angularjs-rails-cdn -->
  <%= angularjs_include_tag :google %>
  <!--this is where the gmaps scripts are added-->
  <script src='//maps.googleapis.com/maps/api/js?sensor=false'></script>
  <script src='//cdnjs.cloudflare.com/ajax/libs/underscore.js/1.6.0/underscore-min.js'></script>
  <%= stylesheet_link_tag "application" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
  <%= render 'layouts/shim' %>
  <%= yield :scripts %>
</head>

<body>
<% unless cookie_policy_accepted? %>
    <%= render 'layouts/cookie_alert' %>
<% end %>
<div class="page-frame">
  <%= render 'layouts/header' %>
  <section id="main">   <!-- uniquify the child container to create the top margin -->
      <div class="container">  <!-- outermost twitter bootstrap container-->
        <% flash.each do |name, msg| %>
            <div class="row">
              <div class="span8 offset2">
                <div id="flash_<%= "#{name}" %>" class="alert alert-<%= name == :notice ? "success" : "error" %>">
                  <a class="close" data-dismiss="alert">&#215;</a>
                  <%= content_tag :div, msg %>
                </div>
              </div>
            </div>
        <% end %>
        <google-map ng-controller='MapController' center='map.center' zoom='map.zoom'></google-map>
        <div id="content">
          <%= yield %>
        </div>
      </div>
      <br>
      <br>
      <div id="push"></div>
  </section>

</div>
<div id="footer" class="container">
  <hr>
  <div class="row">
    <div class="span4">
      <%= render 'layouts/footer' %>
    </div>
    <div class="span4">
      <%= render 'layouts/footer2' %>
    </div>
    <div class="span4">
      <%= render 'layouts/footer3' %>
    </div>
  </div>
</div>
</body>
</html>
