<% content_for :scripts do %>
    <% javascript_include_tag 'drop_select' %>
<% end %>

<%= form_tag("/organizations/search", :method => "get") do %>
    <div id='customsearch' class='controls' style="">
      <div class="dropdown" data-select="true">
          <a class='add-on dropdown-toggle' data-toggle='dropdown' href='#'>
          <span class='dropdown-display'>
            <% if @category.present? %>
                <%= @category.name %>
               <% else %>
                Category
            <% end %>
          </span><i class='caret'></i>
          </a>
          <div id="textsearch">
          <%= text_field_tag(:q, @query_term || '', { placeholder: 'optional search name/description' }) %>
          <button class="btn" type="submit">Search</button>
          </div>
        <input type='hidden' class='dropdown-field' id="category_id" name="category[id]"/>
        <ul id='cat_select' class='dropdown-menu'>
          <li>
            <%= link_to 'All', '#', :data => {:value => " "} %>
          </li>
          <% @category_options.each do |category| %>
              <li>
                <%= link_to category[0], '#', :data => {:value => category[1]} %>
              </li>
          <% end %>
        </ul>
      </div>
    </div>
<% end %>
