<%= javascript_tag do %>
    LocalSupport.maps.data = <%= raw @organizations.to_json %>
<% end %>

<%= render partial: 'layouts/search_form' %>

<div id="orgs_scroll">
  <div id="organizations">
    <table class="table">
      <tbody>
      <% @organizations.each do |organization| %>
          <tr>
            <td>
              <%= link_to organization.name, organization %>
              <%= smart_truncate(organization.description) %>
            </td>
          </tr>
      <% end %>
      </tbody>
    </table>
  </div>
</div>



